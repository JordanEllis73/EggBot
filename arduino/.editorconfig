# EditorConfig for Arduino EggBot Controller
# Ensures consistent coding style across editors

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Arduino source files (.ino, .cpp, .h)
[*.{ino,cpp,h,hpp}]
indent_style = space
indent_size = 2
max_line_length = 80

# JSON files (for Arduino IDE configuration)
[*.json]
indent_style = space
indent_size = 2

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Python scripts (helper scripts)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88